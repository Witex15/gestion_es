<%= form_with(model: grade, class: "contents") do |form| %>
  <% if grade.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul class="list-disc ml-6">
        <% grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :value %>
    <%= form.number_field :value, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": grade.errors[:value].none?, "border-red-400 focus:outline-red-600": grade.errors[:value].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :execute_on %>
    <%= form.date_field :execute_on, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": grade.errors[:execute_on].none?, "border-red-400 focus:outline-red-600": grade.errors[:execute_on].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :examination_id %>
    <%= form.text_field :examination_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": grade.errors[:examination_id].none?, "border-red-400 focus:outline-red-600": grade.errors[:examination_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :student_id %>
    <%= form.text_field :student_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": grade.errors[:student_id].none?, "border-red-400 focus:outline-red-600": grade.errors[:student_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
