<div class="max-w-md mx-auto p-6 bg-white rounded shadow">
  <p class="text-lg text-gray-800 mb-4">Welcome <%= @email %>!</p>

  <p class="text-gray-700 mb-4">You can confirm your account email through the link below:</p>

  <p class="text-center">
    <%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </p>
</div>
