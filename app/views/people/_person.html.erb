<div id="<%= dom_id person %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Username:</strong>
    <%= person.username %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Lastname:</strong>
    <%= person.lastname %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Firstname:</strong>
    <%= person.firstname %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= person.email %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Phone number:</strong>
    <%= person.phone_number %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Iban:</strong>
    <%= person.iban %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Role:</strong>
    <%= person.role %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= person.status_id %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= person.address_id %>
  </p>
</div>
