<% content_for :title, "Subjects" %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center py-8">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-semibold text-gray-900">Subjects</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all subjects in the system.</p>
    </div>
    <% if policy(Subject).create? %>
      <%= render 'shared/new_resource_button', 
                 resource_class: Subject, 
                 path: new_subject_path, 
                 button_text: "New subject" %>
    <% end %>
  </div>

  <div class="mt-8 flex flex-col">
    <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Slug</th>
                <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <% @subjects.each do |subject| %>
                <tr id="<%= dom_id(subject) %>">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
                    <%= link_to subject.name, subject_path(subject), class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                    <%= subject.slug %>
                  </td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <%= render 'shared/action_buttons', resource: subject %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
